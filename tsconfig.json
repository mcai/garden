{
   "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["es2017", "es7", "es6", "dom"],
      "declaration": true,
      "rootDir": "./lib",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "include": [
      "lib"
   ],
   "exclude": [
      "node_modules",
      "dist"
   ]
}
